<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include
        android:id="@+id/include"
        layout="@layout/layout_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.anand.brose.graphviewlibrary.GraphView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/graphView"
        android:fillViewport="true"
        android:layout_above="@+id/layout_progress"
        android:layout_below="@+id/include">
    </com.anand.brose.graphviewlibrary.GraphView>
    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:layout_below="@+id/include"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:text="00:00:00.000" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_record"
        android:onClick="controlClick"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_record" >

        <ImageView
            android:id="@+id/img_mic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/white"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_mic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_upload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="uploadFileClick"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_record_disable" >

        <ImageView
            android:id="@+id/img_upload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/white"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_file_upload" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_play_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:onClick="playBackClick"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_record_disable" >

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/white"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/layout_play_back">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_toLeftOf="@+id/txt_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="50"
            android:progressTint="@color/colorPrimary"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="TextView" />
    </RelativeLayout>


</RelativeLayout>
