<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#aaffffff" android:startColor="#aaffffff" android:type="linear" />
                    <corners android:radius="2dp" />
                    <padding android:bottom="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow" />

            </item>

        </layer-list>

    </item>

</selector>